<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/background_image"

        android:layout_marginTop="80dp"

        android:layout_centerVertical="false"
        android:layout_centerHorizontal="true"
        android:src="@drawable/covidp"
        android:layout_width="120dp"
        android:layout_height="120dp"/>


    <TextView
        android:id="@+id/txt1"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@+id/background_image"
        android:textColor="@android:color/white"
        android:text="COVID-19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView

        android:textSize="15sp"
        android:textStyle="normal"
        android:textAlignment="center"
        android:layout_below="@+id/txt1"
        android:textColor="#F1F1F1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Coronavirus disease (COVID-19) is an infectious disease caused by a newly discovered coronavirus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/powered_by_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OsDroidi"

        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"/>


</RelativeLayout>